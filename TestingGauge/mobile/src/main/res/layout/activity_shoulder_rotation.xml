<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bicep_layout">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/SensorStatusBicepX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="X Status"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteY="0dp" />
            <ProgressBar
                android:id="@+id/progressCompBicepXPos"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:foregroundGravity="right"
                android:max="100"
                android:progress="50"
                android:layout_marginLeft="200dp"
                android:progressTint="#9933ff"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SensorStatusBicepX"
                tools:visibility="visible" />
            <ProgressBar
                android:id="@+id/progressBarCompBicepXNeg"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="180dp"
                android:layoutDirection="rtl"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:foregroundGravity="right"
                android:max="100"
                android:progress="50"
                android:progressTint="#9933ff"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="@+id/seekBarCompBicepXNeg"
                tools:visibility="visible" />
            <SeekBar
                android:id="@+id/seekBarCompBicepXPos"
                android:layout_width="180dp"
                android:layout_height="16dp"
                android:layout_marginLeft="200dp"
                android:rotation="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/SensorStatusBicepX" />
            <SeekBar
                android:id="@+id/seekBarCompBicepXNeg"
                android:layout_width="180dp"
                android:layout_height="16dp"
                android:layoutDirection="rtl"
                android:rotation="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/SensorStatusBicepX"
                />
            <TextView
                android:id="@+id/SensorStatusBicepY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Y Status"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progressCompBicepXPos" />
            <ProgressBar
                android:id="@+id/progressBarCompBicepYPos"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:foregroundGravity="right"
                android:max="100"
                android:progress="50"
                android:layout_marginLeft="200dp"
                android:progressTint="#9933ff"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/seekBarCompBicepYPos"
                tools:visibility="visible" />
            <ProgressBar
                android:id="@+id/progressBarCompBicepYNeg"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="180dp"
                android:layoutDirection="rtl"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:foregroundGravity="right"
                android:max="100"
                android:progress="50"
                android:progressTint="#9933ff"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="@+id/seekBarCompBicepYNeg"
                tools:visibility="visible" />
            <SeekBar
                android:id="@+id/seekBarCompBicepYPos"
                android:layout_width="180dp"
                android:layout_height="16dp"
                android:layout_marginLeft="200dp"
                android:rotation="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/SensorStatusBicepY" />
            <SeekBar
                android:id="@+id/seekBarCompBicepYNeg"
                android:layout_width="180dp"
                android:layout_height="16dp"
                android:layoutDirection="rtl"
                android:rotation="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/SensorStatusBicepY"
                />
            <TextView
                android:id="@+id/SensorStatusBicepZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Z status"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progressBarCompBicepYNeg" />
            <ProgressBar
                android:id="@+id/progressBarCompBicepZ"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:foregroundGravity="right"
                android:max="100"
                android:progress="50"
                android:progressTint="#9933ff"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/seekBarCompBicepZ"
                tools:visibility="visible" />
            <SeekBar
                android:id="@+id/seekBarCompBicepZ"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:rotation="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/SensorStatusBicepZ" />
            <ImageView
                android:id="@+id/armPic"
                android:layout_width="311dp"
                android:layout_height="314dp"
                android:layout_marginTop="5dp"
                android:scaleType="center"
                android:src="@drawable/armbent"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progressBarCompBicepZ"/>
            <TextView
                android:id="@+id/bicepValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arm Value"
                android:textColor="#000000"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/armPic"/>
            <ProgressBar
                android:id="@+id/progressBarBicepFlexPos"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:foregroundGravity="right"
                android:max="100"
                android:progress="50"
                android:layout_marginLeft="200dp"
                android:progressTint="#9933ff"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/seekBarBicepFlexPos"
                tools:visibility="visible" />
            <ProgressBar
                android:id="@+id/progressBarBicepFlexNeg"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="180dp"
                android:layoutDirection="rtl"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:foregroundGravity="right"
                android:max="100"
                android:progress="50"
                android:progressTint="#9933ff"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="@+id/seekBarBicepFlexNeg"
                tools:visibility="visible" />
            <SeekBar
                android:id="@+id/seekBarBicepFlexPos"
                android:layout_width="180dp"
                android:layout_height="16dp"
                android:layout_marginLeft="200dp"
                android:rotation="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bicepValue" />
            <SeekBar
                android:id="@+id/seekBarBicepFlexNeg"
                android:layout_width="180dp"
                android:layout_height="16dp"
                android:layoutDirection="rtl"
                android:rotation="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bicepValue"
                />
            <ImageButton
                android:id="@+id/returnHome"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|right"
                android:background="@drawable/rightarrow"
                android:onClick="returnToMain"
                android:visibility="visible" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bicep_layout">
    <TextView
        android:id="@+id/SensorStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Bicep Flexion and Extension"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/armPic"
        android:layout_width="311dp"
        android:layout_height="314dp"
        android:layout_marginTop="48dp"
        android:scaleType="center"
        android:src="@drawable/armbent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arm Value"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/armPic"/>

    <ProgressBar
        android:id="@+id/progressBarBicepFlexPos"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:foregroundGravity="right"
        android:max="100"
        android:progress="50"
        android:layout_marginLeft="200dp"
        android:progressTint="#9933ff"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/seekBarBicepFlexPos"
        tools:visibility="visible" />
    <ProgressBar
        android:id="@+id/progressBarBicepFlexNeg"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="180dp"
        android:layoutDirection="rtl"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:foregroundGravity="right"
        android:max="100"
        android:progress="50"
        android:progressTint="#9933ff"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@+id/seekBarBicepFlexNeg"
        tools:visibility="visible" />
    <SeekBar
        android:id="@+id/seekBarBicepFlexPos"
        android:layout_width="180dp"
        android:layout_height="16dp"
        android:layout_marginTop="444dp"
        android:layout_marginLeft="200dp"
        android:rotation="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <SeekBar
        android:id="@+id/seekBarBicepFlexNeg"
        android:layout_width="180dp"
        android:layout_height="16dp"
        android:layoutDirection="rtl"
        android:layout_marginTop="444dp"
        android:rotation="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageButton
        android:id="@+id/returnHome"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|right"
        android:background="@drawable/rightarrow"
        android:onClick="returnToMain"
        android:visibility="visible" />

</android.support.constraint.ConstraintLayout>